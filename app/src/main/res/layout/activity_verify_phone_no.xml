<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#111947"
    android:layout_height="match_parent"
    tools:context=".VerifyPhoneNo">
    <TextView
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="XÁC THỰC OTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/openlock"/>
    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/vongtrong1"
        android:id="@+id/nhapotp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:hint="Mã OTP"
        android:textColorHint="@color/white"
      android:layout_height="50dp"/>
    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/xacnhanotp"
        android:background="@color/purple_700"
        android:text="Xác nhận"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:id="@+id/progresbar"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>