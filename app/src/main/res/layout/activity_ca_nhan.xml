<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CaNhanActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#64B5F6"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/id_trove"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_chevron_left" />
        <TextView
            android:id="@+id/xinchao"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Xin Chào" />
        <ImageView
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:layout_gravity="bottom"
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="99dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="40dp"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Thông tin cá nhân"
        android:textColor="#FF1744"
        android:textSize="25dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtthongtincanhan"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="30dp"
        android:text="Thông tin cá nhân                                   >"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtthongtinlichdat"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="30dp"
        android:text="Lịch đặt                                                     >"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtdãnguat"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="30dp"
        android:text="Đăng xuất                                                 >"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />
</LinearLayout>